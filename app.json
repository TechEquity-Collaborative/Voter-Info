{
  "name": "Voter-Info",
  "scripts": {
    "postdeploy": "python voter_info.manage.py migrate --noinput"
  },
  "env": {
    "ON_HEROKU": "true",
    "BUILD_WITH_GEO_LIBRARIES": "1",
    "GDAL_LIBRARY_PATH": "/app/.heroku/vendor/lib/libgdal.so",
    "GEOS_LIBRARY_PATH": "/app/.heroku/vendor/lib/libgeos_c.so",
    "DJANGO_SECRET_KEY": {
      "generator": "secret"
    },
    "SENTRY_DSN": {
      "required": true
    }
  },
  "stack": "heroku-16",
  "addons": [
    "heroku-postgresql"
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "hobby"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    },
    {
      "url": "heroku/nodejs"
    }
  ]
}
