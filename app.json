{
  "name": "Voter-Info",
  "scripts": {
    "postdeploy": "python voter_info.manage.py migrate --noinput"
  },
  "env": {
    "ON_HEROKU": {
      "description": "Shows the app is on Heroku",
      "value": "true"
    },
    "BUILD_WITH_GEO_LIBRARIES": {
      "value": "1"
    },
    "GDAL_LIBRARY_PATH": {
      "value": "/app/.heroku/vendor/lib/libgdal.so"
    },
    "GEOS_LIBRARY_PATH": {
      "value": "/app/.heroku/vendor/lib/libgeos_c.so"
    },
    "DJANGO_SECRET_KEY": {
      "generator": "secret"
    }
  },
  "stack": "heroku-16",
  "addons": [
    "heroku-postgresql"
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "hobby"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    },
    {
      "url": "heroku/nodejs"
    }
  ]
}
